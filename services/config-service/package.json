{
  "name": "@universal-cms/config-service",
  "version": "1.0.0",
  "description": "Configuration Service - Manages themes and configurations",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
