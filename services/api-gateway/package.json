{
  "name": "@universal-cms/api-gateway",
  "version": "1.0.0",
  "description": "API Gateway - Entry point for Universal CMS microservices",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "test": "jest",
    "docker:build": "docker build -t universal-cms/api-gateway .",
    "docker:run": "docker run -p 3000:3000 universal-cms/api-gateway"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.8.0",
    "@types/compression": "^1.7.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}