{
  "name": "@universal-cms/core",
  "version": "1.0.0",
  "description": "Universal Content Management System - Core Framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rimraf dist",
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "dev": "npm run compile:watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:update": "npm run test:coverage && node scripts/update-coverage-simple.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepublishOnly": "npm run build",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "cms",
    "content-management",
    "framework",
    "typescript",
    "ioc",
    "dependency-injection",
    "components",
    "modular",
    "extensible"
  ],
  "author": {
    "name": "Universal CMS Team",
    "email": "team@universal-cms.com",
    "url": "https://github.com/universal-cms/core"
  },
  "license": "MIT",
  "homepage": "https://github.com/universal-cms/core#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/universal-cms/core.git"
  },
  "bugs": {
    "url": "https://github.com/universal-cms/core/issues"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-environment-node": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
